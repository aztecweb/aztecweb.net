.tmp-site
    align-items center
    background url( '../images/background.jpg' ) no-repeat center center fixed
    background-size cover
    display flex
    justify-content center
    height 100vh
    position relative

    &--logo
        padding 20px
        width 400px

    &--message
        absolute bottom left
        box-sizing border-box
        color $white
        font-family $serif
        font-size 20px
        padding 20px
        text-align center
        width 100%
